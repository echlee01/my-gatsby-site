{
    "compilerOptions": {
        "module": "es2020",
        "target": "es2020",
        "moduleResolution": "node",
        "jsx": "preserve",
        "allowJs": true,
        "noEmit": true,
        "isolatedModules": false,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "public", ".cache"]
}
